<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('./partials/head') %>
    <title>Editar perfil</title>
</head>

<body class="body__black">
    <div class="form__container">
        <h1 class="edit__hl">Editar Perfil</h1>
        <form class="form" action="./edit?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form__cont">
                <h2 class="edit__text">Avatar actual</h2>
                <img src="<% if (!user.avatar) { %>
                    <%= '/img/avatars/defaultUser.png' %>
                <% }  else {%>
                    <%= user.avatar %>
                <% } %>
                 " alt="<%= user.name %>" class="profile__img">
                <div class="edit__new-avatar">
                    <div class="new-avatar" for="avatar">
                    <label for="avatar" class="edit__text">Nueva imagen de perfil</label>
                    <input type="file" class="avatar-btn" name="avatar" id="avatar">
                    </div>
                </div>
                <label for="name" class="form__label">Nombre de usuario</label>
                <input class="form__input" type="text" id="name" name="name" placeholder="Cambiar nombre"
                    value="<%= user.name %>" required oninvalid="this.setCustomValidity('Campo obligatorio')"
                    oninput="setCustomValidity('')">
            </div>
            <div class="form__cont">
                <label for="position" class="form__label">Cargo</label>
                <input class="form__input" type="text" id="position" name="position" value="<%= user.position %>"
                    placeholder="Cambiar cargo" required oninvalid="this.setCustomValidity('Campo obligatorio')"
                    oninput="setCustomValidity('')">
            </div>
            <div class="form__cont">
                <label for="about" class="form__label">Sobre mi</label>
                <textarea class="form__textarea" name="about" id="about" cols="30" rows="10" value="<%= user.about %>"
                    placeholder="Cuento cosas sobre mi"></textarea>
            </div>
            <div class="form__cont">
                <label for="phone" class="form__label">Numero de telefono</label>
                <input class="form__input" type="text" name="phone" id="phone" name="phone" value="<%= user.phone %>"
                    placeholder="Cambiar numero" pattern="^\d{8,12}?"
                    oninvalid="this.setCustomValidity('Entre 8 a 12 digitos')" oninput="setCustomValidity('')">
            </div>
            <div class="form__cont">
                <label for="email" class="form__label">Email</label>
                <input class="form__input" type="email" name="email" id="email" name="email" value="<%= user.email %>"
                    placeholder="Cambiar email" required oninvalid="this.setCustomValidity('Campo obligatorio')"
                    oninput="setCustomValidity('')">
            </div>
            <div class="form__cont">
                <label for="web" class="form__label">Sitio Web</label>
                <input class="form__input" type="web" name="web" id="web" name="web" value="<%= user.web %>"
                    placeholder="Cambiar web">
            </div>
            <div class="form__cont">
                <label for="location" class="form__label">Lugar de residencia</label>
                <input class="form__input" type="location" name="location" id="location" name="location"
                    value="<%= user.location %>" placeholder="Cambiar residencia">
            </div>
            <%- include ('./partials/edit-select') %>
            <%- include ('./partials/edit-experience') %>
            <div class="form__btncont">
                <button type="submit" class="form__btn">Editar</button>
            </div>
        </form>
        <div class="detail__btncont detail__btncontm1">
            <a href="./">
                <button class="detail__btn">Volver</button>
            </a>
        </div>
            </div>
</body>

</html>