<div class="experience">
    <% if (user.jobtitle != '') { %>
    <h2 class="experience__hl">Work experience</h2>
    <div class="experience__info">
        <h3 class="experience__title"><%= user.jobtitle %> |<%= user.jobdate1 %></h3>
        <h4 class="experience__subtitle"><%= user.jobsubtitle %></h4>
        <p class="experience__text"><%= user.jobcomment %></p>
    </div>
   <% } %>
   <h2 class="body__hl">Educational background</h2>
    <% if (user.studytitle1) { %>
        <div class="experience__info">
            <h3 class="experience__title"><%= user.studytitle1 %> | <%= user.studydate1 %></h3>
            <h4 class="experience__subtitle"><%= user.studysubtitle1 %></h4>
        </div>
    <% } %>
    <% if (user.studytitle2) { %>
        <div class="experience__info">
            <h3 class="experience__title"><%= user.studytitle2 %> | <%= user.studydate2 %></h3>
            <h4 class="experience__subtitle"><%= user.studysubtitle2 %></h4>
        </div>
    <% } %>
    <h2 class="body__hl">References</h2>
    <h3 class="exp__title">Referencias de los pibes</h3>
</div>